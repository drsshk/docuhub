                    


server {
    listen 443 ssl;
    server_name docuhub.rujilabs.com;

    ssl_certificate /etc/letsencrypt/live/docuhub.rujilabs.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/docuhub.rujilabs.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Serve React frontend
    root /var/www/docuhub/frontend/dist;
    index index.html;

    location / {
        try_files $uri /index.html;
    }

    # Django API via Gunicorn
    location /api/ {
        proxy_pass http://unix:/run/gunicorn.sock;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    # Django API for accounts app via Gunicorn
    location /accounts/api/ {
        proxy_pass http://unix:/run/gunicorn.sock;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    # Django static files
    location /static/ {
        alias /var/www/docuhub/static/;
    }

    # Django media files
    location /media/ {
        alias /var/www/docuhub/media/;
    }
}

server {
    listen 80;
    server_name docuhub.rujilabs.com;
    return 301 https://$host$request_uri;
}
